<UserControl x:Class="FlowTomator.Desktop.EnumEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FlowTomator.Desktop"
             mc:Ignorable="d" 
             d:DesignWidth="128" d:DesignHeight="24">

    <ComboBox x:Name="ComboBox" FontSize="11"
              SelectedItem="{Binding Value, RelativeSource={RelativeSource AncestorType={x:Type local:EnumEditor}}}"
              ItemsSource="{Binding Values, RelativeSource={RelativeSource AncestorType={x:Type local:EnumEditor}}}" />

</UserControl>